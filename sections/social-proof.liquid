{{ 'component-social-proof.css' | asset_url | stylesheet_tag }}

<div class="social-proof color-{{ section.settings.color_scheme }} gradient">
  <div class="social-proof__wrapper page-width section-{{ section.id }}-padding">
    {% if section.settings.heading != blank %}
      <h2 class="social-proof__heading {{ section.settings.heading_size }} center animate-fade-in">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="social-proof__grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
        {% for block in section.blocks %}
          <div class="social-proof__item animate-slide-up" style="animation-delay: {{ forloop.index0 | times: 0.1 }}s" {{ block.shopify_attributes }}>
            <div class="social-proof__card">
              {% if block.settings.icon != blank %}
                <div class="social-proof__icon-wrapper">
                  <div class="social-proof__icon-glow"></div>
                  <div class="social-proof__icon">
                    {% if block.settings.icon == 'users' %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                        <path d="M16 3.128a4 4 0 0 1 0 7.744" />
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                        <circle cx="9" cy="7" r="4" />
                      </svg>
                    {% elsif block.settings.icon == 'truck' %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2" />
                        <path d="M15 18H9" />
                        <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14" />
                        <circle cx="17" cy="18" r="2" />
                        <circle cx="7" cy="18" r="2" />
                      </svg>
                    {% elsif block.settings.icon == 'shield-check' %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
                        <path d="m9 12 2 2 4-4" />
                      </svg>
                    {% elsif block.settings.icon == 'award' %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="m15.477 12.89 1.515 8.526a.5.5 0 0 1-.81.47l-3.58-2.687a1 1 0 0 0-1.197 0l-3.586 2.686a.5.5 0 0 1-.81-.469l1.514-8.526" />
                        <circle cx="12" cy="8" r="6" />
                      </svg>
                    {% else %}
                      {{ block.settings.icon }}
                    {% endif %}
                  </div>
                </div>
              {% endif %}

              <div class="social-proof__content">
                {% if block.settings.stat != blank %}
                  <div class="social-proof__stat">
                    {{ block.settings.stat }}
                  </div>
                {% endif %}

                {% if block.settings.label != blank %}
                  <div class="social-proof__label">
                    {{ block.settings.label }}
                  </div>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div class="social-proof__description rte">
                    {{ block.settings.description }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  /* Base Responsive Padding */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Section Base */
  .social-proof {
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* Animated Background Pattern */
  .social-proof::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(var(--color-base-accent-1), 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(var(--color-base-accent-2), 0.03) 0%, transparent 50%);
    pointer-events: none;
    animation: subtleFloat 20s ease-in-out infinite;
  }

  @keyframes subtleFloat {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(20px, -20px) scale(1.05); }
  }

  /* Heading Animations */
  .social-proof__heading {
    margin-bottom: 4rem;
    position: relative;
    display: inline-block;
    color: #1a202c;
    font-weight: 800;
    text-shadow:
      0 2px 8px rgba(0, 0, 0, 0.08),
      0 1px 3px rgba(0, 0, 0, 0.12);
  }

  .social-proof__heading::after {
    content: '';
    position: absolute;
    bottom: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 4px;
    background: linear-gradient(90deg,
      transparent 0%,
      var(--color-base-accent-1) 20%,
      var(--color-base-accent-2) 80%,
      transparent 100%
    );
    border-radius: 2px;
    animation: lineGlow 2s ease-in-out infinite;
  }

  @keyframes lineGlow {
    0%, 100% { opacity: 0.6; width: 80px; }
    50% { opacity: 1; width: 120px; }
  }

  /* Grid Layout */
  .social-proof__grid {
    gap: 4rem;
    position: relative;
    z-index: 1;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Card Container */
  .social-proof__item {
    opacity: 0;
    transform: translateY(30px);
    flex: 1 1 0;
    min-width: 0;
  }

  .social-proof__card {
    position: relative;
    height: 100%;
    padding: 4rem 3rem;
    background: linear-gradient(
      135deg,
      #0E1B4D 0%,
      #4770DB 100%
    );
    border-radius: 28px;
    border: 2px solid rgba(71, 112, 219, 0.5);
    backdrop-filter: blur(20px);
    box-shadow:
      0 20px 60px -15px rgba(14, 27, 77, 0.5),
      0 0 0 1px rgba(71, 112, 219, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  /* Gradient Border Effect */
  .social-proof__card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 28px;
    padding: 3px;
    background: linear-gradient(
      135deg,
      rgba(var(--color-base-accent-1), 0.6) 0%,
      rgba(var(--color-base-accent-2), 0.6) 100%
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  /* Hover Effects */
  .social-proof__card:hover {
    transform: translateY(-16px) scale(1.03);
    background: linear-gradient(
      135deg,
      #4770DB 0%,
      #0E1B4D 100%
    );
    border-color: rgba(255, 255, 255, 0.6);
    box-shadow:
      0 30px 80px -20px rgba(14, 27, 77, 0.8),
      0 0 0 3px rgba(71, 112, 219, 0.5),
      inset 0 2px 8px rgba(255, 255, 255, 0.15);
  }

  .social-proof__card:hover::before {
    opacity: 1;
  }

  /* Icon Wrapper with Glow */
  .social-proof__icon-wrapper {
    position: relative;
    width: 140px;
    height: 140px;
    margin: 0 auto 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-proof__icon-glow {
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle,
      rgba(var(--color-base-accent-1), 0.4) 0%,
      rgba(var(--color-base-accent-2), 0.2) 50%,
      transparent 70%
    );
    border-radius: 50%;
    filter: blur(20px);
    opacity: 0;
    transition: opacity 0.5s ease, transform 0.5s ease;
    animation: pulseGlow 3s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% { transform: scale(0.9); opacity: 0.3; }
    50% { transform: scale(1.1); opacity: 0.6; }
  }

  .social-proof__card:hover .social-proof__icon-glow {
    opacity: 0.8;
    transform: scale(1.2);
  }

  /* Icon Styling */
  .social-proof__icon {
    font-size: 4rem;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120px;
    height: 120px;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.25) 0%,
      rgba(255, 255, 255, 0.15) 100%
    );
    border-radius: 50%;
    border: 3px solid rgba(255, 255, 255, 0.4);
    box-shadow:
      0 8px 24px -8px rgba(0, 0, 0, 0.3),
      inset 0 2px 8px rgba(255, 255, 255, 0.3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: iconFloat 6s ease-in-out infinite;
  }

  .social-proof__icon svg {
    width: 60px;
    height: 60px;
    color: #ffffff;
    opacity: 1;
    filter: drop-shadow(0 2px 6px rgba(0, 0, 0, 0.3));
    transition: all 0.3s ease;
  }

  @keyframes iconFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(5deg); }
  }

  .social-proof__card:hover .social-proof__icon {
    transform: scale(1.2) rotate(10deg);
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.35) 0%,
      rgba(255, 255, 255, 0.25) 100%
    );
    border-color: rgba(255, 255, 255, 0.8);
    box-shadow:
      0 12px 36px -12px rgba(0, 0, 0, 0.5),
      inset 0 2px 12px rgba(255, 255, 255, 0.5);
  }

  .social-proof__card:hover .social-proof__icon svg {
    opacity: 1;
    transform: scale(1.15);
    filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.4));
  }

  /* Content Styling */
  .social-proof__content {
    position: relative;
    z-index: 1;
  }

  .social-proof__stat {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
    color: #ffffff;
    line-height: 1.1;
    letter-spacing: -0.03em;
    text-shadow:
      0 4px 12px rgba(0, 0, 0, 0.3),
      0 0 40px rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .social-proof__card:hover .social-proof__stat {
    transform: scale(1.08);
    text-shadow:
      0 6px 16px rgba(0, 0, 0, 0.4),
      0 0 60px rgba(255, 255, 255, 0.4);
  }

  .social-proof__label {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.95);
    opacity: 1;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .social-proof__card:hover .social-proof__label {
    opacity: 1;
    letter-spacing: 0.18em;
    color: #ffffff;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.3);
  }

  .social-proof__description {
    font-size: 1rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.85);
    opacity: 1;
    font-weight: 500;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .social-proof__card:hover .social-proof__description {
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  }

  /* Entrance Animations */
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Adjustments */
  @media screen and (max-width: 749px) {
    .social-proof__heading {
      margin-bottom: 3rem;
    }

    .social-proof__grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
      justify-content: center;
    }

    .social-proof__card {
      padding: 3.5rem 2.5rem;
    }

    .social-proof__icon-wrapper {
      width: 120px;
      height: 120px;
      margin-bottom: 2rem;
    }

    .social-proof__icon {
      width: 100px;
      height: 100px;
      font-size: 3rem;
    }

    .social-proof__icon svg {
      width: 50px;
      height: 50px;
    }

    .social-proof__stat {
      font-size: 3rem;
    }

    .social-proof__label {
      font-size: 1rem;
    }

    .social-proof__description {
      font-size: 0.95rem;
    }
  }

  /* Performance Optimization */
  .social-proof__card,
  .social-proof__icon,
  .social-proof__icon-glow,
  .social-proof__stat,
  .social-proof__label {
    will-change: transform;
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .social-proof__card,
    .social-proof__icon,
    .social-proof__icon-glow,
    .social-proof__heading::after,
    .animate-fade-in,
    .animate-slide-up {
      animation: none !important;
      transition: none !important;
    }

    .social-proof__item {
      opacity: 1;
      transform: none;
    }
  }
{% endstyle %}

