{{ 'component-social-proof.css' | asset_url | stylesheet_tag }}

<div class="social-proof color-{{ section.settings.color_scheme }} gradient">
  <div class="social-proof__wrapper page-width section-{{ section.id }}-padding">
    {% if section.settings.heading != blank %}
      <h2 class="social-proof__heading {{ section.settings.heading_size }} center">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="social-proof__grid grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down">
        {% for block in section.blocks %}
          <div class="social-proof__item" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="social-proof__icon">
                {{ block.settings.icon }}
              </div>
            {% endif %}

            {% if block.settings.stat != blank %}
              <div class="social-proof__stat">
                {{ block.settings.stat }}
              </div>
            {% endif %}

            {% if block.settings.label != blank %}
              <div class="social-proof__label">
                {{ block.settings.label }}
              </div>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="social-proof__description rte">
                {{ block.settings.description }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .social-proof {
    text-align: center;
  }

  .social-proof__heading {
    margin-bottom: 3rem;
  }

  .social-proof__grid {
    gap: 2rem;
  }

  .social-proof__item {
    padding: 2rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
  }

  .social-proof__icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .social-proof__stat {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: var(--color-foreground);
  }

  .social-proof__label {
    font-size: 1.1rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .social-proof__description {
    font-size: 0.95rem;
    opacity: 0.8;
  }
{% endstyle %}

